(ОбособленныйБлок

	!ФУНКЦИЯ ДЛЯ ПОДСЧЕТА СУММЫ ЭЛЕМЕНТОВ МАССИВА!

	(Определить суммаМассива (Функция массив (Блок
		(Определить сумма 0)
		(Определить позиция 0)
		(Пока (Меньше позиция (СписокДлина массив)) (Блок
			(Определить сумма (Сложить сумма (Число (СписокИзвлечь массив позиция))))
			(Определить позиция (Сложить позиция 1))
		))
		(Вернуть сумма)
	)))

	!ВВОДИМ САМ МАССИВ!

	(Определить длинаМассива (Ввод "Введите длину массива: "))
	(Определить массив (Список))
	(Определить счетчик 0)
	(Пока (Меньше счетчик длинаМассива) (Блок
		(СписокДобавитьКонец массив (Ввод (Сложить "Введите элемент №" счетчик)))
		(Определить счетчик (Сложить счетчик 1))
	))
	
	(Вывод "Такой получился массив:")
	(Вывод массив)
	(Вывод "А вот сумма массива:")
	(Вывод (суммаМассива массив))
)